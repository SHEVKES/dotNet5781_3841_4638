<Window x:Class="PL.AddNewStationToLine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="AddNewStationToLine" Height="450" Width="800">
    <Grid>
        <Label Content="תחנה קודמת" HorizontalAlignment="Left" Margin="616,96,0,0" VerticalAlignment="Top"/>
        <Label Content="התחנה החדשה" HorizontalAlignment="Left" Margin="619,179,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.533,1.776"/>
        <ComboBox x:Name="CbPrev" ItemsSource="{Binding}" HorizontalAlignment="Left" Margin="464,98,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="CbNew" ItemsSource="{Binding}" HorizontalAlignment="Left" Margin="459,186,0,0" VerticalAlignment="Top" Width="120"/>
        <CheckBox x:Name="Check" Content="CheckBox" HorizontalAlignment="Left" Margin="636,264,0,0" VerticalAlignment="Top"/>
        <Button Content="שמירה" HorizontalAlignment="Left" Margin="502,337,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.035,-0.547" Click="Button_Click"/>

    </Grid>
</Window>
